<!DOCTYPE html>
<html>
<head>
    <title>VoiceMode LiveKit</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://cdn.jsdelivr.net/npm/livekit-client/dist/livekit-client.umd.js"></script>
    <style>
        body {
            font-family: -apple-system, sans-serif;
            padding: 20px;
            max-width: 600px;
            margin: 0 auto;
            background: #1a1a2e;
            color: #eee;
        }
        h1 { color: #00d4ff; }
        button {
            padding: 15px 30px;
            font-size: 18px;
            margin: 10px;
            cursor: pointer;
            border: none;
            border-radius: 8px;
            background: #00d4ff;
            color: #1a1a2e;
            font-weight: bold;
        }
        button:disabled {
            background: #444;
            color: #888;
            cursor: not-allowed;
        }
        #talkBtn {
            background: #00ff88;
            font-size: 24px;
            padding: 20px 40px;
            margin: 20px 10px;
        }
        #talkBtn.talking {
            background: #ff4444;
            animation: pulse 1s infinite;
        }
        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.7; }
        }
        .mode-toggle {
            margin: 10px 0;
            padding: 10px;
            background: #2a2a4e;
            border-radius: 8px;
        }
        .mode-toggle label {
            margin-right: 20px;
            cursor: pointer;
        }
        #status {
            padding: 20px;
            background: #2a2a4e;
            border-radius: 8px;
            margin: 20px 0;
            border-left: 4px solid #00d4ff;
        }
        .connected { border-left-color: #00ff88 !important; }
        .error { border-left-color: #ff4444 !important; }
        #log {
            font-family: monospace;
            font-size: 12px;
            white-space: pre-wrap;
            max-height: 300px;
            overflow-y: auto;
            background: #0a0a1e;
            padding: 10px;
            border-radius: 4px;
        }
        .info {
            font-size: 12px;
            color: #888;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <h1>VoiceMode</h1>
    <div class="info">
        Server: {{LIVEKIT_WS_URL}} | Room: {{LIVEKIT_ROOM}}<br>
        Generated: {{GENERATED_DATE}} | Token expires: {{TOKEN_EXPIRY}}
    </div>

    <div id="status">Status: Not connected</div>

    <button id="connectBtn" onclick="connect()">Connect</button>
    <button id="micBtn" onclick="enableMic()" disabled>Enable Mic</button>
    <button id="disconnectBtn" onclick="disconnect()" disabled>Disconnect</button>

    <div class="mode-toggle" id="modeToggle" style="display:none;">
        <strong>Mode:</strong>
        <label><input type="radio" name="mode" value="auto" checked onchange="setMode('auto')"> Auto (always on)</label>
        <label><input type="radio" name="mode" value="toggle" onchange="setMode('toggle')"> Toggle (click to start/stop)</label>
        <label><input type="radio" name="mode" value="hold" onchange="setMode('hold')"> Hold to Talk</label>
    </div>

    <button id="talkBtn" style="display:none;" onclick="toggleTalking()">
        ðŸŽ¤ Click to Talk
    </button>

    <h3>Log:</h3>
    <div id="log"></div>

    <script>
        const SERVER_URL = '{{LIVEKIT_WS_URL}}';
        const TOKEN = '{{LIVEKIT_TOKEN}}';

        let room = null;
        let currentMode = 'auto';  // 'auto', 'toggle', or 'hold'
        let isTalking = false;

        function log(msg) {
            const logEl = document.getElementById('log');
            const time = new Date().toLocaleTimeString();
            logEl.textContent += `[${time}] ${msg}\n`;
            logEl.scrollTop = logEl.scrollHeight;
            console.log(msg);
        }

        function setStatus(msg, type) {
            const el = document.getElementById('status');
            el.textContent = 'Status: ' + msg;
            el.className = type || '';
        }

        function setMode(mode) {
            currentMode = mode;
            const talkBtn = document.getElementById('talkBtn');

            if (mode === 'auto') {
                talkBtn.style.display = 'none';
                isTalking = false;
                talkBtn.classList.remove('talking');
                if (room && room.localParticipant) {
                    room.localParticipant.setMicrophoneEnabled(true);
                }
                log('Auto mode: mic always on');
            } else if (mode === 'toggle') {
                talkBtn.style.display = 'inline-block';
                talkBtn.textContent = 'ðŸŽ¤ Click to Talk';
                talkBtn.onclick = toggleTalking;
                talkBtn.onmousedown = null;
                talkBtn.onmouseup = null;
                talkBtn.ontouchstart = null;
                talkBtn.ontouchend = null;
                isTalking = false;
                talkBtn.classList.remove('talking');
                if (room && room.localParticipant) {
                    room.localParticipant.setMicrophoneEnabled(false);
                }
                log('Toggle mode: click to start/stop');
            } else if (mode === 'hold') {
                talkBtn.style.display = 'inline-block';
                talkBtn.textContent = 'ðŸŽ¤ Hold to Talk';
                talkBtn.onclick = null;
                talkBtn.onmousedown = startTalking;
                talkBtn.onmouseup = stopTalking;
                talkBtn.ontouchstart = startTalking;
                talkBtn.ontouchend = stopTalking;
                isTalking = false;
                talkBtn.classList.remove('talking');
                if (room && room.localParticipant) {
                    room.localParticipant.setMicrophoneEnabled(false);
                }
                log('Hold mode: hold button to talk');
            }
        }

        async function toggleTalking() {
            if (!room || currentMode !== 'toggle') return;
            const talkBtn = document.getElementById('talkBtn');

            if (isTalking) {
                // Stop talking
                isTalking = false;
                talkBtn.classList.remove('talking');
                talkBtn.textContent = 'ðŸŽ¤ Click to Talk';
                await room.localParticipant.setMicrophoneEnabled(false);
                log('Stopped talking');
            } else {
                // Start talking
                isTalking = true;
                talkBtn.classList.add('talking');
                talkBtn.textContent = 'ðŸ”´ Click to Stop';
                await room.localParticipant.setMicrophoneEnabled(true);
                log('Started talking');
            }
        }

        async function startTalking() {
            if (!room || currentMode !== 'hold') return;
            isTalking = true;
            document.getElementById('talkBtn').classList.add('talking');
            document.getElementById('talkBtn').textContent = 'ðŸ”´ Speaking...';
            await room.localParticipant.setMicrophoneEnabled(true);
            log('Started talking (hold)');
        }

        async function stopTalking() {
            if (!room || currentMode !== 'hold') return;
            isTalking = false;
            document.getElementById('talkBtn').classList.remove('talking');
            document.getElementById('talkBtn').textContent = 'ðŸŽ¤ Hold to Talk';
            await room.localParticipant.setMicrophoneEnabled(false);
            log('Stopped talking (hold)');
        }

        async function connect() {
            try {
                log('Connecting to ' + SERVER_URL);
                setStatus('Connecting...');

                room = new LivekitClient.Room();

                room.on(LivekitClient.RoomEvent.Connected, () => {
                    log('Connected to room!');
                    setStatus('Connected', 'connected');
                    document.getElementById('connectBtn').disabled = true;
                    document.getElementById('micBtn').disabled = false;
                    document.getElementById('disconnectBtn').disabled = false;
                });

                room.on(LivekitClient.RoomEvent.Disconnected, () => {
                    log('Disconnected from room');
                    setStatus('Disconnected');
                    document.getElementById('connectBtn').disabled = false;
                    document.getElementById('micBtn').disabled = true;
                    document.getElementById('disconnectBtn').disabled = true;
                    document.getElementById('modeToggle').style.display = 'none';
                    document.getElementById('talkBtn').style.display = 'none';
                });

                room.on(LivekitClient.RoomEvent.ParticipantConnected, (participant) => {
                    log('Participant joined: ' + participant.identity);
                });

                room.on(LivekitClient.RoomEvent.TrackSubscribed, (track, publication, participant) => {
                    log('Track subscribed: ' + track.kind + ' from ' + participant.identity);
                    if (track.kind === 'audio') {
                        const el = track.attach();
                        document.body.appendChild(el);
                    }
                });

                await room.connect(SERVER_URL, TOKEN);
                log('Connected! Click "Enable Mic" to start audio.');

            } catch (err) {
                log('Error: ' + err.message);
                setStatus('Error: ' + err.message, 'error');
                console.error(err);
            }
        }

        async function disconnect() {
            if (room) {
                await room.disconnect();
                room = null;
            }
        }

        async function enableMic() {
            if (!room) {
                log('Not connected');
                return;
            }
            try {
                log('Enabling microphone...');
                await room.localParticipant.setMicrophoneEnabled(true);
                log('Microphone enabled!');
                document.getElementById('micBtn').disabled = true;
                // Show mode toggle after mic enabled
                document.getElementById('modeToggle').style.display = 'block';
                log('Choose mode: Auto (always on) or Push-to-Talk');
            } catch (err) {
                log('Mic error: ' + err.message);
                setStatus('Mic error (needs HTTPS?)', 'error');
            }
        }
    </script>
</body>
</html>
